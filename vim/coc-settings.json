{
	"list.autoResize": true,
	"list.insertMappings": {
		"<C-c>": "do:exit"
	},
	"list.normalMappings": {
		"<C-c>": "do:exit"
	},
	"list.source.symbols.defaultOptions": [
		"--interactive",
		"--normal"
	],
	"list.source.output.defaultOptions": [
		"--normal"
	],
	"coc.preferences.formatOnSaveFiletypes": [
		"json"
	],
	"languageserver": {
		"dockerfile": {
		  "command": "docker-langserver",
		  "filetypes": ["dockerfile"],
		  "args": ["--stdio"]
		},
		"bash": {
		  "command": "bash-language-server",
		  "args": ["start"],
		  "filetypes": ["sh"],
		  "ignoredRootPaths": ["~"]
		}
  },
  "coc.preferences.extensionUpdateCheck": "daily"
}
